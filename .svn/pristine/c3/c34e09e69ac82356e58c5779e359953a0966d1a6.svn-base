namespace local_mediaserver\form;

defined('MOODLE_INTERNAL') || die();

require_once($CFG->libdir . '/formslib.php');

class media_edit extends \moodleform {

    /**
     * Form definition
     *
     * @return void
     */
    public function definition() {
        global $CFG;

        $mform = $this->_form;

        list($stream) = $this->_customdata;

        $mform->addElement('header', 'mediainfo', get_string('addcontentinfo', 'local_mediaserver'));

        $mform->addElement('hidden', 'id');
        $mform->setType('id', PARAM_INT);

        $mform->addElement('htmleditor', 'description', get_string('description'));
        $mform->setType('description', PARAM_RAW);

        if ($CFG->usecomments) {
            $mform->addElement('selectyesno', 'comments', get_string('comments'));
        } else {
            $mform->addElement('hidden', 'comments');
            $mform->setType('comments', PARAM_BOOL);

            $mform->addElement('static', 'commentsdisabled', get_string('comments'), get_string('commentsnotenabled'));
        }

        $mform->setExpanded('mediainfo');

        $this->add_action_buttons(true);

        $this->set_data($stream);
    }
}
